<tr>
  <td><%= link_to schema.name, dataset_file_schema_path(schema) %></td>
  <td><%= schema.owner_username %></td>
  <td><%= time_or_date(schema.created_at) %></td>
  <td>
    <div class="dropdown show">
      <button class="dropdown-toggle" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
        &#8230;
      </button>
      <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuLink">
        <%= link_to("<div class='dropdown-link'>View</div>".html_safe, dataset_file_schema_path(schema), class: "dropdown-item") %>
        <%= link_to("<div class='dropdown-link'>Delete</div>".html_safe, dataset_file_schema_path(schema), method: :delete, data: { confirm: "Are you sure you want to delete this dataset file schema?" }, class: "dropdown-item") %>
      </div>
    </div>
  </td>
</tr>
